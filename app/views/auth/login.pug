extends ../layout

block content
    div(class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6")
        h1(class="form-header") Login
        form(novalidate method="POST")
            if message.length
                ul(class="form-error margin-bottom-15 break-word")
                    li(class="margin-left-15") #{message}
            div(class="form-group")
                input(type="text" class="form-control" placeholder="Username or Email" name="username" value= helper.old('username', input))
            div(class="form-group")
                input(type="password" class="form-control" placeholder="Password" name="password" value="")
            button(type="button" class="btn btn-default" onclick="window.history.back();") Back
            = " "
            button(type="submit" class="btn btn-default") Login